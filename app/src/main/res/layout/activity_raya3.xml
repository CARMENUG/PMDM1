<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Raya3">


    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:text=" "
        android:contentDescription="Boton 7"
        android:textStyle="bold"
        android:textSize="100dp"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"

        />

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:text=" "
        android:textStyle="bold"
        android:contentDescription="Boton 8"
        android:textSize="100dp"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"

        />

    <Button
        android:id="@+id/b9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:text=" "
        android:contentDescription="Boton 9"
        android:textStyle="bold"
        android:textSize="100dp"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
        />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b7"
        android:text=" "
        android:contentDescription="Boton 4"
        android:textStyle="bold"
        android:textSize="100dp"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
        />

    <Button
        android:id="@+id/b5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintBottom_toTopOf="@id/b8"
        android:text=" "
        android:contentDescription="Boton 5"
        android:textSize="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
         />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintBottom_toTopOf="@id/b9"
        android:text=" "
        android:contentDescription="Boton 6"
        android:textSize="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
        />

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintBottom_toTopOf="@id/b6"
        android:text=" "
        android:contentDescription="Boton 3"
        android:textSize="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
    />

    <Button
        android:id="@+id/b1"
        style="@style/MyButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bordes"
        android:contentDescription="Boton 1"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/b4"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintBottom_toTopOf="@id/b5"
        android:text=" "
        android:textStyle="bold"
        android:contentDescription="Boton 2"
        android:textSize="100sp"
        android:textColor="@color/black"
        android:background="@drawable/bordes"
        style="@style/MyButtonStyle"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juega..."
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        />

    <Button
        android:id="@+id/btnsalida"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:text="menu principal"
        android:textColor="@color/colorRojo"
        android:contentDescription="Botón para salir al menú principal"

        />

    <Button
        android:id="@+id/btnreiniciar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:text="reiniciar"
        android:textColor="@color/verde_menta"
        android:contentDescription="Botón para reiniciar la partida"
        />
</androidx.constraintlayout.widget.ConstraintLayout>