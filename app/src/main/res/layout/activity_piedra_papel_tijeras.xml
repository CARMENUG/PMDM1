<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_menta"
    tools:context=".PiedraPapelTijeras">


    <TextView
        android:id="@+id/txtjugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Eleccion del jugador"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorAzul"/>

    <ImageView
        android:id="@+id/imgjugador"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/juego_p_p_t"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtjugador1"
        app:layout_constraintVertical_bias="0.056"
        />


    <TextView
        android:id="@+id/txtCPU"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ElecciÃ³n ordenador"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgjugador"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAzul"
        />

    <ImageView
        android:id="@+id/imgCPU"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/juego_p_p_t"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCPU"
        app:layout_constraintVertical_bias="0.133" />



    <Button
        android:id="@+id/btnpiedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piedra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCPU"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnpapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toEndOf="@id/btnpiedra"
        app:layout_constraintTop_toBottomOf="@id/imgCPU"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btntijera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tijera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@id/btnpapel"
        app:layout_constraintTop_toBottomOf="@id/imgCPU"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnsalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnpapel"
        android:textColor="@color/colorRojo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>